{
  "extends": "@layowt/typescript-config/react-library.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "~/*": [
        "../../packages/*"
      ],
      "~/components/*": [
        "../../packages/components/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../packages/components/logo.tsx",
    "../../packages/components/src/ui/background-beams.tsx",
    "../../packages/components/src/ui/vortex.tsx",
    "../../packages/components/src/ui/input.tsx",
    "../../packages/components/src/ui/button.tsx",
    "app/providers.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
