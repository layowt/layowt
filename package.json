{
  "name": "layowt-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:dashboard": "turbo dev --filter=layowt-dashboard",
    "dev:marketing": "turbo dev --filter=layowt-marketing",
    "build": "npx prisma generate && next build",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "prettier-check": "prettier --check \"**/*.{ts,tsx}\"",
    "start": "next start",
    "lint": "next lint",
    "stripe:listen": "stripe listen --forward-to localhost:4343/api/webhooks/stripe",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",

    "next": "^14.1.3",
    
    "react": "^18",
    "react-dom": "^18",
    "react-redux": "^9.1.0",
    "redux": "^5.0.1",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@types/micro-cors": "^0.1.5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-redux": "^7.1.33",

    "prisma": "^5.10.2",
    "turbo": "^2.0.6",
    "typescript": "^5"
  },
  "packageManager": "npm@10.0.0"
}
